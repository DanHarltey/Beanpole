@{
    ViewBag.Title = "Delete All";
}

<h2>Delete All</h2>

<h3>Are you sure you want to delete all from this environment?</h3>
<div>
    <h4>@ViewBag.Environment</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete All" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { Environment = Model.Environment })
        </div>
    }
</div>
